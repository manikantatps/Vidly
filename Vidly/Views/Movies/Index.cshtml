@model List<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
@if (Model.Count > 0)
{
    <table class="table table-bordered table-hover">

        @foreach (var item in Model)
        {
            <tr>

                <td>@item.Name</td>
            </tr>
        }

    </table>
}
else
{
        <h4>We don't have Movies yet</h4>
}